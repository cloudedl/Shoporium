{% layout 'layout.liquid'%}

{% block content %}
    <h1>{{product.name}}</h1>
    
    <div>
        
        <img src="{{product.img}}">
        <p>Description: {{product.description}}</p>
        <p>${{product.price}}</p>
        <p>Inventory: {{product.qty}}</p>

        <div>
            <!-- assign a variable to qty and turn it into an integer -->
            {% assign productQty = product.qty | integer %}
            {% if productQty != 0 %}
                <form action="/products/buy/{{product._id}}?_method=PUT" method="post">
                    <input type="submit" value="Buy">
                </form>
            {% elsif productQty == 0 %}
                <h3 style="color:red">Out of Stock</h3>
            {% endif %}
